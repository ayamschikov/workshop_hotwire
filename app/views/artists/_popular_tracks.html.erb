<%# locals: (artist:, tracks:, show_load_more:, limit: params[:limit], offset: params[:offset]) -%>
<ul class="tracks mt-2">
  <%= turbo_frame_tag dom_id(artist, :popular_tracks), target: "_top" do %>
    <%= render tracks, enqueueble: true %>
    <% if show_load_more %>
      <li class="track">
        <span class="track--number"></span>
        <%= link_to "Load more", artist_path(offset: offset + limit),
          data: {"turbo-frame" => "_self"},
          class: "text-secondary hover:text-primary transition-colors" %>
      </li>
    <% end %>
  <% end %>
</ul>
